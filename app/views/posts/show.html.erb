<p id="notice"><%= notice %></p>



<div class="panel panel-default">
        <div class="panel-heading">
          	<p>
  			<strong>Title:</strong>
  			<%= @post.title %>
  			<br>
  			<%= @post.author %> posted <%= time_ago_in_words(@post.created_at) %> ago
			</p>
        </div>
        <div class="panel-body">
        	<p>
  			<strong>Author:</strong>
  			<%= @post.author %>
			</p>
          	<p>
  			<strong>Blog entry:</strong>
  			<%= @post.blog_entry %>
			</p>
        </div>
        <div class="panel-footer">
          <button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_post_path(@post) %> </button>
          <button type="button" class="btn btn-info"><%= link_to 'Back', posts_path %></button>
        </div>
      </div>


<% @post.comments.each do |comment| %>
	<div class="panel panel-default">
        <div class="panel-heading">
		<p><%= comment.author %> said <%= time_ago_in_words(comment.created_at) %> ago</p>
		</div>
		<div class="panel-body">
		<p><%= comment.comment_entry %></p>
		</div>
	</div>

<% end %>



<div id="comments">
	<%=render 'comments/form', comment: @comment %>
</div>


